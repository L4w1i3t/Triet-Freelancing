{
  "security": {
    "version": "1.0.0",
    "enabled": true,
    "environment": "production",
    "features": {
      "csrf_protection": true,
      "xss_protection": true,
      "rate_limiting": true,
      "input_validation": true,
      "data_encryption": true,
      "clickjacking_protection": true,
      "content_security_policy": true,
      "privacy_analytics": true
    },
    "rate_limiting": {
      "max_requests_per_minute": 10,
      "block_duration_minutes": 5,
      "endpoints": {
        "contact_form": 3,
        "payment_submission": 5,
        "api_calls": 30
      }
    },
    "content_security_policy": {
      "default_src": ["'self'"],
      "script_src": [
        "'self'",
        "'unsafe-inline'",
        "https://cdn.jsdelivr.net",
        "https://www.paypal.com",
        "https://js.stripe.com"
      ],
      "style_src": [
        "'self'",
        "'unsafe-inline'",
        "https://fonts.googleapis.com",
        "https://cdnjs.cloudflare.com"
      ],
      "font_src": [
        "'self'",
        "https://fonts.gstatic.com",
        "https://cdnjs.cloudflare.com"
      ],
      "img_src": ["'self'", "data:", "https:", "blob:"],
      "connect_src": [
        "'self'",
        "https://api.emailjs.com",
        "https://api.paypal.com",
        "https://api.stripe.com"
      ],
      "frame_src": ["https://www.paypal.com", "https://js.stripe.com"],
      "object_src": ["'none'"],
      "base_uri": ["'self'"],
      "form_action": ["'self'"],
      "upgrade_insecure_requests": true
    },
    "headers": {
      "x_frame_options": "DENY",
      "x_content_type_options": "nosniff",
      "x_xss_protection": "1; mode=block",
      "referrer_policy": "strict-origin-when-cross-origin",
      "permissions_policy": "camera=(), microphone=(), geolocation=(), payment=()",
      "strict_transport_security": "max-age=31536000; includeSubDomains; preload"
    },
    "input_validation": {
      "email_max_length": 254,
      "name_max_length": 50,
      "message_max_length": 5000,
      "phone_formats": ["US", "international"],
      "allowed_file_types": [
        ".jpg",
        ".jpeg",
        ".png",
        ".gif",
        ".pdf",
        ".doc",
        ".docx"
      ],
      "max_file_size": 10485760,
      "profanity_filter": true,
      "xss_filter": true
    },
    "privacy": {
      "respect_do_not_track": true,
      "anonymize_ips": true,
      "cookie_consent_required": true,
      "data_retention_days": 30,
      "gdpr_compliant": true,
      "ccpa_compliant": true
    },
    "monitoring": {
      "security_events": true,
      "failed_login_attempts": true,
      "suspicious_activity": true,
      "performance_metrics": true,
      "error_tracking": true
    },
    "blocked_patterns": [
      "(<script|<iframe|<object|<embed)",
      "(javascript:|vbscript:|data:text/html)",
      "(eval\\(|document\\.cookie|localStorage)",
      "(union|select|insert|drop|delete|update|create|alter)",
      "(\\.\\.\\/|\\.\\.|boot\\.ini|\\/etc\\/passwd)",
      "(base64_decode|file_get_contents|curl|wget)"
    ],
    "trusted_domains": [
      "triet-dev.com",
      "www.triet-dev.com",
      "api.emailjs.com",
      "www.paypal.com",
      "api.paypal.com",
      "js.stripe.com",
      "api.stripe.com",
      "fonts.googleapis.com",
      "fonts.gstatic.com",
      "cdnjs.cloudflare.com",
      "cdn.jsdelivr.net"
    ],
    "emergency": {
      "lockdown_mode": false,
      "maintenance_mode": false,
      "security_contact": "security@triet-dev.com",
      "incident_response": true
    },
    "commission_specific": {
      "max_order_value": 50000,
      "payment_verification": true,
      "order_encryption": true,
      "customer_data_protection": true,
      "transaction_logging": true,
      "dispute_prevention": true
    }
  }
}
